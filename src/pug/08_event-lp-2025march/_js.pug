script.
  // モーダルを開くボタンのクリックイベント
  $('.modal-open-liff-qr').click(function() {
    $('.modal,.bg-modal').show();
  });

  // モーダルを閉じるボタンと背景のクリックイベント
  $('.modal-close,.bg-modal').click(function() {
    $('.modal,.bg-modal').hide();
  });

script.
  $(document).ready(function () {
    // スクロールイベントで固定CTAボタンの表示を制御
    $(window).on("scroll", function () {
      const scrollPosition = $(window).scrollTop();    
      if (scrollPosition > 500) {
        $('.fixed-cta-button').fadeIn();
      } 

      // 各セクションが視界に入った際のアクティブクラスの切り替え関数
      function handleScrollEvent(sectionSelector, linkSelector) {
        $(sectionSelector).each(function () {
          const sectionTop = $(this).offset().top;
          const sectionHeight = $(this).outerHeight();
          const sectionId = $(this).attr("id");

          if (
            scrollPosition >= sectionTop - sectionHeight / 2 &&
            scrollPosition < sectionTop + sectionHeight / 2
          ) {
            $(linkSelector).removeClass("active");
            $(`a[href="#${sectionId}"]`).addClass("active");
          }
        });
      }

      // PC用の追従イベントナビゲーション
      handleScrollEvent(
        ".lp-25mar-events-main-section-levels",
        ".lp-25mar-events-sub-left-subject-wrap-level"
      );

      // スマホ用の追従イベントナビゲーション
      handleScrollEvent(
        ".lp-25mar-events-main-section",
        ".lp-25mar-events-spnavi-child"
      );
    });

    // inview を一括適用
    $(".lp-25mar-feature-grid-child-img, .lp-25mar-events-main-section-levels-child, .lp-25mar-events-main-section-levels-child-img, .lp-25mar-intro-title, .lp-25mar-fv-title, .lp-25mar-fvpc-grid-child, .lp-25mar-events-sub,.lp-25mar-fvsp-title-img img")
      .on("inview", function (event, isInView) {
        if (isInView) {
          $(this).addClass("inview");
        }
      });
  });